<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">46dp</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="alertDialogTheme">@style/RedAlertDialog</item>
        <!--<item name="android:textColorSecondary">#ffffff</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.NoColor">
        <item name="colorPrimary">#00000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#00000000</item>
    </style>

    <style name="CustomActionBar" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
        <item name="android:windowActionBarOverlay">@null</item>
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <!--新增一个item，用于控制menu-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--把该属性改为false即可使menu位置位于toolbar之下-->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="RedAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="android:colorAccent">@color/colorAccent</item>-->
        <item name="android:textColor">@color/dialog_button_text_color</item>
    </style>

    <style name="ActionBarTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextNormal">
        <item name="android:textColor">@color/color_text_Large</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EditNormal">
        <item name="android:textColor">@color/color_text_Large</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="EditNormal.CannotFixed">
        <item name="android:textColor">@color/color_text_remark</item>
    </style>

    <style name="TextNormal.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextNormal.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextNormal.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextNormal.InvoiceItem">
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="FlatButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!-- popupwindow的动画 -->

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:minHeight">25dip</item>
        <item name="android:minWidth">25dip</item>
        <item name="android:maxHeight">25dip</item>
        <item name="android:maxWidth">25dip</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>


    <!-- 发票预览界面字体型号 -->
    <style name="iv_heading_text_normal">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="iv_heading_text_bold">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="iv_title_normal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="iv_title_normal_small">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="iv_title_large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="iv_content_normal">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#585858</item>
    </style>

    <style name="iv_content_normal_13">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#585858</item>
    </style>

    <style name="iv_content_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#585858</item>
    </style>

    <!-- 发票预览界面字体型号 -->

    <color name="dialog_button_text_color">#4d4d4d</color>


    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialog_untran" parent="dialog_tran">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>